{
  "compilerOptions": {
    "target": "es2017",  
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@models/*": ["models/*"],
      "@helpers/*": ["helpers/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
